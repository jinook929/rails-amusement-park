<h1>Sign Up</h1>

<%= form_for @user do |f| %>
  <div>
    <%= f.label :name, class: "form-label" %>
    <%= f.text_field :name, class: "form-control", class: "form-control", placeholder: @name_error %>
  </div>
  <div>
    <%= f.label :password, class: "form-label" %>
    <%= f.password_field :password, class: "form-control", placeholder: @password_error %>
  </div>
  <!--<div>
    <%#= f.label :password_confirmation, class: "form-label" %>
    <%#= f.password_field :password_confirmation, class: "form-control", placeholder: @password_confirmation_error %>
  </div>-->
  <div>
    <%= f.label :happiness, class: "form-label" %>
    <%= f.number_field :happiness, class: "form-control" %>
  </div>
  <div>
    <%= f.label :nausea, class: "form-label" %>
    <%= f.number_field :nausea, class: "form-control" %>
  </div>
  <div>
    <%= f.label :height, class: "form-label" %>
    <%= f.number_field :height, class: "form-control" %>
  </div>
  <div>
    <%= f.label :tickets, class: "form-label" %>
    <%= f.number_field :tickets, class: "form-control" %>
  </div>
  <div>
    <%= f.check_box :admin, class: "form-check-input" %>
    <%= f.label :admin, class: "form-check-label" %>
  </div>
  <p>
    <%= f.submit 'Create User', class: "btn btn-primary" %>
  </p>
<% end %>
  

<%= link_to "Back to Home", root_path, class: "btn btn-link" %>